{
    "manifest_version": 3,
    "name": "Medium Breaker",
    "version": "1.0",
    "description": "JailBreak Medium Articles for Free!!!",

    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage","declarativeNetRequest","tabs","activeTab","webNavigation","contextMenus"

    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon120.png"
    },
  
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["inject.js"],
        "run_at": "document_start",
        "all_frames": true
      }
    ]
   
  }
  